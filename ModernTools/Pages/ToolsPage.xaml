<Page x:Class="ModernTools.ToolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:ModernTools"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ToolsPage">

    <Grid Margin="24">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ui:SimpleStackPanel Spacing="16">
                <TextBlock Text="Tools" 
                          FontSize="28" 
                          FontWeight="Bold"
                          Margin="0,0,0,8"/>
                
                <TextBlock Text="Add your custom developer tools here!" 
                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                          Margin="0,0,0,16"/>
                
                <!-- Example Tool Card 1 -->
                <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       Padding="16"
                       CornerRadius="4">
                    <ui:SimpleStackPanel Spacing="12">
                        <ui:SimpleStackPanel Spacing="12" Orientation="Horizontal">
                            <ui:FontIcon Glyph="&#xE90F;" FontSize="24" VerticalAlignment="Center"/>
                            <TextBlock Text="Tool 1" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </ui:SimpleStackPanel>
                        <TextBlock Text="This is a placeholder for your first tool. Replace this with your actual tool implementation."
                                  TextWrapping="Wrap"
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <Button Content="Launch Tool 1" 
                               Style="{StaticResource AccentButtonStyle}"
                               HorizontalAlignment="Left"/>
                    </ui:SimpleStackPanel>
                </Border>
                
                <!-- Example Tool Card 2 -->
                <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       Padding="16"
                       CornerRadius="4">
                    <ui:SimpleStackPanel Spacing="12">
                        <ui:SimpleStackPanel Spacing="12" Orientation="Horizontal">
                            <ui:FontIcon Glyph="&#xE90F;" FontSize="24" VerticalAlignment="Center"/>
                            <TextBlock Text="Tool 2" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </ui:SimpleStackPanel>
                        <TextBlock Text="This is a placeholder for your second tool. Replace this with your actual tool implementation."
                                  TextWrapping="Wrap"
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <Button Content="Launch Tool 2" 
                               Style="{StaticResource AccentButtonStyle}"
                               HorizontalAlignment="Left"/>
                    </ui:SimpleStackPanel>
                </Border>
                
                <!-- Example Tool Card 3 -->
                <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                       Padding="16"
                       CornerRadius="4">
                    <ui:SimpleStackPanel Spacing="12">
                        <ui:SimpleStackPanel Spacing="12" Orientation="Horizontal">
                            <ui:FontIcon Glyph="&#xE90F;" FontSize="24" VerticalAlignment="Center"/>
                            <TextBlock Text="Tool 3" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </ui:SimpleStackPanel>
                        <TextBlock Text="This is a placeholder for your third tool. Replace this with your actual tool implementation."
                                  TextWrapping="Wrap"
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <Button Content="Launch Tool 3" 
                               Style="{StaticResource AccentButtonStyle}"
                               HorizontalAlignment="Left"/>
                    </ui:SimpleStackPanel>
                </Border>
            </ui:SimpleStackPanel>
        </ScrollViewer>
    </Grid>
</Page>
