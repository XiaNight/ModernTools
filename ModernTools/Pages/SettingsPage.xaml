<Page x:Class="ModernTools.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:ModernTools"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid Margin="24">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ui:SimpleStackPanel Spacing="24">
                <TextBlock Text="Settings" 
                          FontSize="28" 
                          FontWeight="Bold"
                          Margin="0,0,0,8"/>
                
                <!-- Appearance Section -->
                <ui:SimpleStackPanel Spacing="12">
                    <TextBlock Text="Appearance" 
                              FontSize="20" 
                              FontWeight="SemiBold"/>
                    
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                           Padding="16"
                           CornerRadius="4">
                        <ui:SimpleStackPanel Spacing="8">
                            <TextBlock Text="Theme" 
                                      FontWeight="SemiBold"/>
                            <TextBlock Text="Choose between light and dark theme"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <ui:SimpleStackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                                <Button x:Name="LightThemeButton" 
                                       Content="Light" 
                                       Click="LightTheme_Click"
                                       Width="100"/>
                                <Button x:Name="DarkThemeButton" 
                                       Content="Dark" 
                                       Click="DarkTheme_Click"
                                       Width="100"/>
                            </ui:SimpleStackPanel>
                        </ui:SimpleStackPanel>
                    </Border>
                </ui:SimpleStackPanel>
                
                <!-- General Section -->
                <ui:SimpleStackPanel Spacing="12">
                    <TextBlock Text="General" 
                              FontSize="20" 
                              FontWeight="SemiBold"/>
                    
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                           Padding="16"
                           CornerRadius="4">
                        <ui:SimpleStackPanel Spacing="8">
                            <CheckBox Content="Start with Windows" IsChecked="False"/>
                            <CheckBox Content="Show log window on startup" IsChecked="True"/>
                            <CheckBox Content="Enable notifications" IsChecked="True"/>
                        </ui:SimpleStackPanel>
                    </Border>
                </ui:SimpleStackPanel>
                
                <!-- About Section -->
                <ui:SimpleStackPanel Spacing="12">
                    <TextBlock Text="About" 
                              FontSize="20" 
                              FontWeight="SemiBold"/>
                    
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                           Padding="16"
                           CornerRadius="4">
                        <ui:SimpleStackPanel Spacing="8">
                            <TextBlock Text="ModernTools v1.0.0" FontWeight="SemiBold"/>
                            <TextBlock Text="Developer Tool Base Plate"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Text="Built with ModernWPF"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                      Margin="0,8,0,0"/>
                        </ui:SimpleStackPanel>
                    </Border>
                </ui:SimpleStackPanel>
            </ui:SimpleStackPanel>
        </ScrollViewer>
    </Grid>
</Page>
