<!-- DarkColorsView.xaml (WITH SEARCH) -->
<pages:PageBase x:Class="Base.Helpers.DarkColorsView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:pages="clr-namespace:Base.Pages">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search -->
        <TextBox x:Name="SearchBox"
                 Grid.Row="0"
                 Margin="0,0,0,8"
                 Width="260"
                 HorizontalAlignment="Left"
                 TextChanged="SearchBox_TextChanged"
                 ToolTip="Search by key"/>

        <DataGrid x:Name="GridView"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  RowHeight="34">

            <DataGrid.Columns>

                <DataGridTemplateColumn Header="Swatch" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Width="64"
                                    Height="22"
                                    CornerRadius="6"
                                    BorderThickness="1"
                                    BorderBrush="#40000000"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Loaded="Swatch_Loaded"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Key" Width="*" Binding="{Binding Key}"/>
                <DataGridTextColumn Header="Hex" Width="*" Binding="{Binding Hex}"/>
                <DataGridTextColumn Header="Type" Width="220" Binding="{Binding Kind}"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</pages:PageBase>
