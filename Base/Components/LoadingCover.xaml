<UserControl x:Class="Base.Components.LoadingCover"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mw="clr-namespace:ModernWpf.Controls;assembly=ModernWpf.Controls"
             xmlns:local="clr-namespace:Base.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White"
             Opacity="0"
             Visibility="Collapsed"
             IsHitTestVisible="{Binding IsOpen, RelativeSource={RelativeSource Self}}"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid x:Name="Root"
          Background="{Binding OverlayBrush, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <mw:ProgressRing Width="48" Height="48"
                             IsActive="{Binding IsOpen, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Determinate -->
            <Grid>
                <Grid.Resources>
                    <Style TargetType="{x:Type Grid}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsIndeterminate, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding PercentText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                    <ProgressBar Width="360"
                                     Height="8"
                                     Maximum="100"
                                     Value="{Binding Progress, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="{Binding Message, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                           FontSize="14"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,16,0,0"/>

            <TextBlock Text="{Binding SubMessage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           FontSize="12"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,6,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
