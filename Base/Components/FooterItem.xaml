<UserControl x:Class="Base.Components.FooterItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Base.Components"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:Background="White">
    <Grid>
        <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" CornerRadius="4" Margin="2,1" Padding="6,0">
            <StackPanel x:Name="StackContent" Orientation="Horizontal" HorizontalAlignment="Center" >
                <TextBlock x:Name="DeviceName"
                           Text="Texting"
                           FontSize="14"
                           Margin="4,-1,4,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
