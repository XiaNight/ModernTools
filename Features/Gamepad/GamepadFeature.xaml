<UserControl x:Class="Gamepad.GamepadFeature"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gamepad"
             xmlns:base="clr-namespace:Base.Components.Chart;assembly=Base"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             FontFamily="Consolas"
             Padding="10"
             d:DesignHeight="600" d:DesignWidth="1400"
             d:Background="White">
    <Grid>
        <Canvas>
            <Canvas.RenderTransform>
                <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
            </Canvas.RenderTransform>
            <local:JoyStick x:Name="LeftJoyStick" TitleText="L" Canvas.Left="236" Canvas.Top="0"/>
            <local:JoyStick x:Name="RightJoyStick" TitleText="R" Canvas.Left="520" Canvas.Top="0"/>

            <StackPanel Orientation="Vertical" Canvas.Left="820" Canvas.Top="320" Width="420">
                <local:TriggerCounter x:Name="LeftTrigger" TitleText="LT"/>
                <local:TriggerCounter x:Name="RightTrigger" TitleText="RT"/>
            </StackPanel>

            <Canvas Canvas.Left="820" Canvas.Top="0">
                <Canvas.RenderTransform>
                    <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                </Canvas.RenderTransform>
                <local:Controller
                    x:Name="GamepadController"
                    ReleasedBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    PressedBrush="{DynamicResource SystemControlForegroundBaseHighBrush}"
                />
            </Canvas>

            <StackPanel Orientation="Vertical" Canvas.Left="5" Canvas.Top="4">
                <StackPanel Orientation="Horizontal" Margin="0 4">
                    <TextBlock Text="Index: " FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="0" x:Name="IndexText" FontSize="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 4">
                    <TextBlock Text="Connected: " FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="No" x:Name="ConnectedText" FontSize="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 4">
                    <TextBlock Text="Timestamp: " FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="0" x:Name="TimestampText" FontSize="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 4">
                    <TextBlock Text="Vibration: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="0" x:Name="VibrationText" FontSize="20" Margin="4 0" Visibility="Collapsed" VerticalAlignment="Center"/>
                    <Button x:Name="LightVibrationButton" FontSize="16" Content="Light" Padding="4 2" IsEnabled="False" VerticalAlignment="Center"/>
                    <Button x:Name="HeavyVibrationButton" FontSize="16" Margin="4 0" Content="Heavy" Padding="4 2" IsEnabled="False" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 4">
                    <TextBlock Text="ReportRate: " FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="0" x:Name="ReportRateText" FontSize="20"/>
                </StackPanel>
                <ComboBox x:Name="ChartType" HorizontalAlignment="Stretch" SelectedIndex="0" Padding="16,0,16,0">
                    <ComboBoxItem>Report Rate</ComboBoxItem>
                    <ComboBoxItem>Left X</ComboBoxItem>
                    <ComboBoxItem>Left Y</ComboBoxItem>
                    <ComboBoxItem>Right X</ComboBoxItem>
                    <ComboBoxItem>Right Y</ComboBoxItem>
                    <ComboBoxItem>LT</ComboBoxItem>
                    <ComboBoxItem>RT</ComboBoxItem>
                    <ComboBoxItem>Left XY</ComboBoxItem>
                    <ComboBoxItem>Right XY</ComboBoxItem>
                </ComboBox>
                <StackPanel Orientation="Horizontal" Margin="0 4 0 4">
                    <ToggleButton x:Name="AutoFit" Content="Auto Fit" Margin="0 0 4 0" Padding="4" IsChecked="False" VerticalAlignment="Stretch"/>
                    <Button x:Name="ResetCharts" Margin="2 0" Padding="4" ToolTip="Clear" VerticalAlignment="Stretch">
                        <ui:FontIcon Glyph="&#xE75C;"/>
                    </Button>
                    <ToggleButton x:Name="PauseButton" Margin="2 0" Padding="4" ToolTip="Play/Pause" VerticalAlignment="Stretch">
                        <ui:FontIcon Glyph="&#xE768;"/>
                    </ToggleButton>
                    <ToggleButton x:Name="RecordButton" Margin="2 0" Padding="4" IsEnabled="False" ToolTip="Record/Stop" VerticalAlignment="Stretch">
                        <ui:FontIcon Glyph="&#xE7C8;"/>
                    </ToggleButton>
                    <Button x:Name="RenderModeButton" Margin="2 0" Padding="4" ToolTip="Render Mode" VerticalAlignment="Stretch">
                        <ui:FontIcon Glyph="&#xED63;"/>
                    </Button>
                    <ToggleButton x:Name="FullWindowChart" Margin="2 0 0 0" Padding="4" ToolTip="Full Window" VerticalAlignment="Stretch">
                        <ui:FontIcon Glyph="&#xE8A7;"/>
                    </ToggleButton>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical" Canvas.Left="820" Canvas.Top="412">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                    <local:GamepadButton TitleText="B0" x:Name="B0" Width="92"/>
                    <local:GamepadButton TitleText="B1" x:Name="B1" Width="92"/>
                    <local:GamepadButton TitleText="B2" x:Name="B2" Width="92"/>
                    <local:GamepadButton TitleText="B3" x:Name="B3" Width="92"/>
                    <local:GamepadButton TitleText="B4" x:Name="B4" Width="92"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                    <local:GamepadButton TitleText="B5" x:Name="B5" Width="92"/>
                    <local:GamepadButton TitleText="B6" x:Name="B6" Width="92"/>
                    <local:GamepadButton TitleText="B9" x:Name="B9" Width="92"/>
                    <local:GamepadButton TitleText="B10" x:Name="B10" Width="92"/>
                    <local:GamepadButton TitleText="B11" x:Name="B11" Width="92"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <local:GamepadButton TitleText="B12" x:Name="B12" Width="92"/>
                    <local:GamepadButton TitleText="B13" x:Name="B13" Width="92"/>
                    <local:GamepadButton TitleText="B14" x:Name="B14" Width="92"/>
                    <local:GamepadButton TitleText="B15" x:Name="B15" Width="92"/>
                    <local:GamepadButton TitleText="B16" x:Name="B16" Width="92"/>
                </StackPanel>

            </StackPanel>

            <Canvas Canvas.Left="5" Canvas.Top="244">
                <Border
                    x:Name="FullWindowText"
                    Width="800" Height="326"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="3"
                    Padding="6"
                    CornerRadius="0"
                    Visibility="Collapsed">
                    <TextBlock
                        Text="Opened in full window"
                        FontSize="20"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,0,0,10"/>
                </Border>

                <Canvas
                    x:Name="ChartsCanvas"
                    Width="800" Height="326"
                    Visibility="Visible">

                    <Border x:Name="StripChartContainer"
                            Width="800" Height="326"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="3"
                            Padding="36,6,6,16"
                            CornerRadius="0">

                        <Grid Margin="0 4 0 4">
                            <base:FastStripChartControl
                                x:Name="StripChart"
                                RenderMode="Combined"
                                LineBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                DotBrush="{DynamicResource SystemControlHighlightAccentBrush}"
                                LabelBrush="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                LineThickness="3"
                                DotThickness="4"
                                MinY="-10"
                                MaxY="1"/>
                        </Grid>
                    </Border>

                    <Border x:Name="XYChartContainer"
                            Canvas.Left="240"
                            Width="326" Height="326"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="3"
                            CornerRadius="0">

                        <Grid>
                            <base:ScatterChartControl
                                x:Name="XYChart"
                                RenderMode="Combined"
                                LineBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                DotBrush="{DynamicResource SystemControlHighlightAccentBrush}"
                                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                LineThickness="2"
                                AutoFit="False"
                                MinY="-68812"
                                MaxY="3276"
                                MinX="-3276"
                                MaxX="68812"/>
                        </Grid>
                    </Border>
                </Canvas>
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>
