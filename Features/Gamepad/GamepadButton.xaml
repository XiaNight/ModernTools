<UserControl x:Class="Gamepad.GamepadButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gamepad"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100" d:Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
    <Grid>
        <StackPanel
            Orientation="Horizontal">
            <Grid
                x:Name="FillContainer"
                Width="8"
                VerticalAlignment="Stretch"
                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                >
                <Rectangle
                    x:Name="FillRect"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Stretch"
                    Height="0"
                    Fill="{DynamicResource SystemControlForegroundBaseHighBrush}"
                    />
            </Grid>
            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center"
                        >
                <TextBlock
                    VerticalAlignment="Center"
                    Margin="8,0,0,0"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                    Text="{Binding TitleText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    />
                <TextBlock
                    x:Name="ValueText"
                    VerticalAlignment="Center"
                    Margin="8,0,0,0"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                    Text="0"
                    />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
