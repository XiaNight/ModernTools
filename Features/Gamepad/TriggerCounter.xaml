<UserControl x:Class="Gamepad.TriggerCounter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gamepad"
             mc:Ignorable="d"
             FontFamily="Consolas"
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <StackPanel
        Orientation="Vertical">
            <Grid VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                        Text="{Binding TitleText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    />
                    <TextBlock
                        x:Name="ValueText"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="8,0,0,0"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                        Text="65536"
                    />
                </StackPanel>

                <StackPanel
                        Orientation="Horizontal"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right">
                    <TextBlock
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                        Margin="0 0"
                        Text="count:"
                        VerticalAlignment="Center"
                    />
                    <TextBlock
                        x:Name="CountText"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                        Text="0"
                    />
                    <TextBlock
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                        Margin="10 0 0 0"
                        Text="max:"
                        VerticalAlignment="Center"
                    />
                    <TextBlock
                        x:Name="MaxText"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                        Text="0"
                    />
                </StackPanel>
            </Grid>
            <Canvas
                x:Name="FillContainer"
                Height="8"
                HorizontalAlignment="Stretch"
                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
            >
                <Rectangle
                    x:Name="FillRect"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Height="8"
                    Width="0"
                    Fill="{DynamicResource SystemControlForegroundBaseHighBrush}"
                />
                <Rectangle
                    x:Name="MaxIndicator"
                    Canvas.Left="0"
                    Width="6"
                    Height="14"
                    RadiusX="4"
                    RadiusY="2"
                    Stroke="{DynamicResource SystemControlHighlightAccentBrush}"
                    Fill="{DynamicResource SystemControlHighlightAccentBrush}"
                    StrokeThickness="2"
                >
                    <Rectangle.RenderTransform>
                        <TranslateTransform X="-3" Y="-3"/>
                    </Rectangle.RenderTransform>
                </Rectangle>
            </Canvas>
        </StackPanel>
    </Grid>
</UserControl>
